<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.modules.auth.ForgotPasswordActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/forgotPasswordAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/forgotPasswordToolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/forgotPasswordToolbarText"
            app:navigationIcon="@drawable/baseline_arrow_back_24" />
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="55dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/forgotPasswordAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:justificationMode="inter_word"
            android:text="@string/forgotPasswordInstructions"/>
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/forgotPasswordEditTextFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:name="br.com.bmsrangel.dev.todolist.app.core.fragments.EmailEditTextFragment"
            tools:layout="@layout/fragment_email_edit_text"/>
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/sendForgotPasswordEmailBtnFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:name="br.com.bmsrangel.dev.todolist.app.core.fragments.CustomButtonFragment"
            tools:layout="@layout/fragment_custom_button"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>